@Theme UI {
	
	$declare fontSize   : 12;
	$declare fontFamily : 'Arial';
	$declare fontColor  : black;

	// Form styling
	@Theme UI_Form {
		
		backgroundColor: white;
		
		inactiveCaptionColor: #ddd;
		activeCaptionColor: black;

		titlebar: {
			height: 30;
			activeBgColor: #69c1f0;
			inactiveBgColor: black;
			activeColor: black;
			inactiveColor: white;
			captionPadding: 4;
			captionFontSize: 16;
		};

		border: {
			width: 5;
			activeColor: #69c1f0;
			inactiveColor: black;
		};

		font: {
			family: 'Arial';
		};

	};

};