@Theme UI {
	
	$declare fontSize   : 14;
	$declare fontFamily : 'Arial';
	$declare fontColor  : black;

	// Form styling
	@Theme UI_Form {
		
		backgroundColor: white;
		
		inactiveCaptionColor: #f0f0f0;
		activeCaptionColor: black;

		titlebar: {
			height: 25;
			activeBgColor: #69c1f0;
			inactiveBgColor: black;
			activeColor: black;
			inactiveColor: white;
			captionFontSize: 16;
		};

		border: {
			width: 5;
			activeColor: #69c1f0;
			inactiveColor: black;
		};

		font: {
			family: $fontFamily;
			size: $fontSize;
			color: $fontColor;
		};

	};

	@Theme UI_Label {
		width: 100;
		height: 20;

		font: {
			size: $fontSize;
			family: $fontFamily;
			color: $fontColor;
		};
	};

	@Theme UI_Button {
		width: 100;
		height: 30;

		backgroundColor: #f0f0f0;
		borderColor: #acacac;

		font: {
			size: $fontSize;
			family: $fontFamily;
			color: $fontColor;
		};
	};

};