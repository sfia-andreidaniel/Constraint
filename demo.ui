@UI_Resource Base {
	file     from      './resources/file.svg'     16x16 disabled ;
	folder   from      './resources/folder.png'   16x16 disabled ;
};

@UI_Form DemoForm {

	width: 800;
	height: 400;

	left: 10;
	top: 10;

	caption: 'Demo form';

	@UI_MenuBar {

		@UI_MenuItem {
			caption: 'File';

			@UI_MenuItem {
				caption: 'Open';

				@UI_MenuItem {
					caption: 'File 1';
					icon: 'Base/file';
					inputType: RADIO;
					action: 'cmd-open';
				};

				@UI_MenuItem {
					caption: 'File 2';
					icon: 'Base/folder';
					inputType: RADIO;
				};

			};

			@UI_MenuItem {
				caption: 'Exit';
				shortcutKey: 'Ctrl + X';
				action: 'cmd-exit';
			};
		};

		@UI_MenuItem {
			caption: 'Edit';
			disabled: true;
		};

		@UI_MenuItem {
			caption: 'View';
		};

		@UI_MenuItem {
			caption: 'Insert';
		};

		@UI_MenuItem {
			caption: 'Help';
		};

	};

	@UI_TabsPanel Tabs1 {
		left: 20;
		top: 20;
		right: 20;
		bottom: 40;

		@UI_Tab Tab1 {
			caption: 'Layout';

			@UI_VerticalSplitter Spl1 {
				minDistance: 30;
				distance: 150;
			};

			@UI_HorizontalSplitter Spl2 {
				left: Spl1 right 0;
				minDistance: 130;
			};

			@UI_Button BtnLeft {
				caption: 'Left button';
				left: 20;
				right: Spl1 left 20;
				top: center;
			};

			@UI_Panel Panel1 {
				left: Spl1 right 5;
				top: 5;
				right: 5;
				bottom: Spl2 top 5;

				
				@UI_Button Btn1 {
					caption: 'Hello world';
					bottom: center;
					left: center;
				};

			};

		};
		
		@UI_Tab Tab2 {

			caption: 'CheckBox, Radio';


			@UI_CheckBox Check1 {
				caption: 'I''m a checkbox';
				left: 20;
				top: 20;
				right: 20;
			};

			@UI_CheckBox Check2 {
				caption: 'I''m a disabled checkbox';
				left: 20;
				top: Check1 bottom 20;
				right: 20;

				disabled: true;
			};

			@UI_CheckBox Check3 {
				caption: 'I''m a tri-state checkbox';
				left: 20;
				top: Check2 bottom 20;
				right: 20;

				value: null;
			};

			@UI_RadioBox Radio1 {
				caption: 'I''m a radiobox';
				left: 20;
				top: Check3 bottom 20;
				right: 20;
			};

			@UI_RadioBox Radio2 {
				caption: 'I''m a radiobox too, but I''m disabled';
				left: 20;
				top: Radio1 bottom 20;
				right: 20;

				disabled: true;
				value: true;
			};

			@UI_RadioBox Radio3 {
				caption: 'I''m a radioBox too';
				left: 20;
				top: Radio2 bottom 20;
				right: 20;

				value: false;
			};

		};

		@UI_Tab Tab3 {

			caption: 'DropDowns';

			@UI_ListBox List1 {
				left: 20;
				top: 20;
				right: 20;
				height: 100;

				options: [
					{
						id: 0;
						name: 'Option 1';
					},
					{
						id: 1;
						name: 'Option 2';
					}
				];
			};

		};

	};


};
