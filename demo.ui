@UI_Form DemoForm {
	
	/* Tell the window to open only after the resource called "Constraint" is ready.
	   Note that windows are awainting for some default resources, so there is not
	   need to include them through "$awaits" clause.
	 */
	$awaits resource Constraint;


	width: 800;
	height: 500;
	left: 10;
	top: 10;

	caption: 'Demo form';

	/** placement: DESIGNED; **/

	action: actionCommand();

	@UI_Popup Popup1 {
		@UI_MenuItem {
			caption: 'As csv File';
			action: 'cmd-save-csv';
		};

		@UI_MenuItem {

			caption: 'As document';

			@UI_MenuItem {
				caption: 'Word Document';
				action: 'cmd-save-word';
			};

			@UI_MenuItem {
				caption: 'Excel Document';
				action: 'cmd-save-excel';
			};
		};
	};

	@UI_MenuBar {

		@UI_MenuItem {
			caption: 'File';

			@UI_MenuItem {
				caption: 'Open';

				@UI_MenuItem {
					caption: 'File 1';
					inputType: RADIO;
					action: 'cmd-open';
				};

				@UI_MenuItem {
					caption: 'File 2';
					inputType: RADIO;
				};

			};

			@UI_MenuItem {
				caption: 'Exit';
				shortcutKey: 'Ctrl + X';
				action: 'cmd-exit';
			};
		};

		@UI_MenuItem {
			caption: 'Edit';
			disabled: true;
		};

		@UI_MenuItem {
			caption: 'View';
		};

		@UI_MenuItem {
			caption: 'Insert';
		};

		@UI_MenuItem {
			caption: 'Help';
		};

	};

	@UI_Toolbar Toolbar {
		@UI_Button {
			caption: 'New';
			action: 'cmd_new';
			icon: 'Constraint/file/20x20';
		};
		@UI_Button {
			caption: 'Open';
			action: 'cmd_open';
			icon: 'Constraint/folder/20x20';
		};
		@UI_Button {
			caption: 'Save';
			action: 'cmd_save';
			menu: 'Popup1';
			icon: 'Constraint/ico_edit_save/20x20';
		};
	};

